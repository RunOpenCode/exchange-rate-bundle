{% extends base_template %}

{% block title %}{{ 'exchange_rate.form.title.new'|trans({}, 'runopencode_exchange_rate') }}{% endblock title %}

{% block body %}

    {% block new_form %}

        {{ form_start(form) }}

            {{ form_widget(form) }}

            <button type="submit">
                {{ 'exchange_rate.form.actions.save'|trans({}, 'runopencode_exchange_rate') }}
            </button>

        {{ form_end(form) }}

    {% endblock new_form %}

    {% block new_actions %}

        {% block new_actions_goto_list %}

            {% if not secure or is_granted(access_roles.list) %}
                <a href="{{ path('runopencode_exchange_rate_list') }}">
                    {{ 'exchange_rate.form.actions.list'|trans({}, 'runopencode_exchange_rate') }}
                </a>
            {% endif %}

        {% endblock new_actions_goto_list %}

    {% endblock new_actions %}

{% endblock body %}


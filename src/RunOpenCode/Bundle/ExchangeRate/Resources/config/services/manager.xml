<?xml version="1.0" encoding="UTF-8" ?>
<container
        xmlns="http://symfony.com/schema/dic/services"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>

    <parameters>

        <parameter key="run_open_code.exchange_rate.class">RunOpenCode\ExchangeRate\Manager</parameter>

        <parameter key="run_open_code.exchange_rate.base_currency" />

        <parameter key="run_open_code.exchange_rate.registry.rates.class">RunOpenCode\Bundle\ExchangeRate\Registry\RatesConfigurationRegistry</parameter>

        <parameter key="run_open_code.exchange_rate.registered_rates" type="collection" />

    </parameters>

    <services>

        <service id="run_open_code.exchange_rate" class="%run_open_code.exchange_rate.class%">
            <argument>%run_open_code.exchange_rate.base_currency%</argument>
            <argument type="service" id="run_open_code.exchange_rate.repository"/>
            <argument type="service" id="run_open_code.exchange_rate.registry.sources"/>
            <argument type="service" id="run_open_code.exchange_rate.registry.processors"/>
            <argument type="service" id="run_open_code.exchange_rate.registry.rates"/>
        </service>

        <service id="roc.exchange_rate" alias="run_open_code.exchange_rate" />

        <service id="run_open_code.exchange_rate.registry.rates" class="%run_open_code.exchange_rate.registry.rates.class%" public="false">
            <argument>%run_open_code.exchange_rate.registered_rates%</argument>
        </service>

    </services>


</container>

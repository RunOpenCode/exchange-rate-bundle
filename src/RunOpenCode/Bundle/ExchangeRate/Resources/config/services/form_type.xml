<?xml version="1.0" encoding="UTF-8" ?>
<container
        xmlns="http://symfony.com/schema/dic/services"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>

    <parameters>

        <parameter key="run_open_code.exchange_rate.form_type.rate_type.class">RunOpenCode\Bundle\ExchangeRate\Form\Type\RateType</parameter>

        <parameter key="run_open_code.exchange_rate.form_type.source_type.class">RunOpenCode\Bundle\ExchangeRate\Form\Type\SourceType</parameter>

        <parameter key="run_open_code.exchange_rate.form_type.rate_type_type.class">RunOpenCode\Bundle\ExchangeRate\Form\Type\RateTypeType</parameter>

        <parameter key="run_open_code.exchange_rate.form_type.currency_code_type.class">RunOpenCode\Bundle\ExchangeRate\Form\Type\CurrencyCodeType</parameter>

        <parameter key="run_open_code.exchange_rate.form_type.foreign_currency_code_type.class">RunOpenCode\Bundle\ExchangeRate\Form\Type\ForeignCurrencyCodeType</parameter>

    </parameters>

    <services>

        <service id="run_open_code.exchange_rate.form_type.rate_type" class="%run_open_code.exchange_rate.form_type.rate_type.class%">
            <argument type="service" id="run_open_code.exchange_rate.registry.rates"/>
            <argument type="service" id="translator" />
            <argument type="collection" />
            <tag name="form.type" />
        </service>

        <service id="run_open_code.exchange_rate.form_type.source_type" class="%run_open_code.exchange_rate.form_type.source_type.class%">
            <argument type="collection" />
            <tag name="form.type" />
        </service>

        <service id="run_open_code.exchange_rate.form_type.rate_type_type" class="%run_open_code.exchange_rate.form_type.rate_type_type.class%">
            <argument type="collection" />
            <tag name="form.type" />
        </service>

        <service id="run_open_code.exchange_rate.form_type.currency_code_type" class="%run_open_code.exchange_rate.form_type.currency_code_type.class%">
            <argument type="collection" />
            <tag name="form.type" />
        </service>

        <service id="run_open_code.exchange_rate.form_type.foreign_currency_code_type" class="%run_open_code.exchange_rate.form_type.foreign_currency_code_type.class%">
            <argument type="collection" />
            <tag name="form.type" />
        </service>

    </services>

</container>

<?xml version="1.0" encoding="UTF-8" ?>
<container
        xmlns="http://symfony.com/schema/dic/services"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>

    <parameters>

        <parameter key="run_open_code.exchange_rate.type.rate_type.class">RunOpenCode\Bundle\ExchangeRate\Form\Type\RateType</parameter>

        <parameter key="run_open_code.exchange_rate.type.currency_type.class">RunOpenCode\Bundle\ExchangeRate\Form\Type\CurrencyType</parameter>

    </parameters>

    <services>


        <service id="run_open_code.exchange_rate.type.rate_type" class="%run_open_code.exchange_rate.type.rate_type.class%">
            <argument type="service" id="run_open_code.exchange_rate.registry.rates"/>
            <argument type="service" id="translator" />
            <tag name="form.type" />
        </service>

        <service id="run_open_code.exchange_rate.type.currency_type" class="%run_open_code.exchange_rate.type.currency_type.class%">
            <argument>%run_open_code.exchange_rate.base_currency%</argument>
            <argument type="service" id="run_open_code.exchange_rate.registry.rates"/>
            <tag name="form.type" />
        </service>


    </services>

</container>

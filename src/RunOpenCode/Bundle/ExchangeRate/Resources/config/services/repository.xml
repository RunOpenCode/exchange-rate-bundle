<?xml version="1.0" encoding="UTF-8" ?>
<container
        xmlns="http://symfony.com/schema/dic/services"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <parameters>

        <parameter key="run_open_code.exchange_rate.repository.file_repository.class">RunOpenCode\ExchangeRate\Repository\FileRepository</parameter>
        <parameter key="run_open_code.exchange_rate.repository.doctrine_dbal_repository.class">RunOpenCode\ExchangeRate\Repository\DoctrineDbalRepository</parameter>

    </parameters>

    <services>

        <service id="run_open_code.exchange_rate.repository" alias="run_open_code.exchange_rate.repository.file_repository"/>

        <service id="run_open_code.exchange_rate.repository.file_repository" class="%run_open_code.exchange_rate.repository.file_repository.class%" public="false">
            <tag name="run_open_code.exchange_rate.repository" alias="file" />
        </service>
        
        <service id="run_open_code.exchange_rate.repository.doctrine_dbal_repository" class="%run_open_code.exchange_rate.repository.doctrine_dbal_repository.class%" public="false">
            <tag name="run_open_code.exchange_rate.repository" alias="doctrine_dbal" />
        </service>

    </services>

</container>

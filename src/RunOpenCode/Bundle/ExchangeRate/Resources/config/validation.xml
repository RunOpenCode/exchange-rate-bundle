<?xml version="1.0" encoding="UTF-8"?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
        http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="RunOpenCode\Bundle\ExchangeRate\Model\Rate">
        <constraint name="RunOpenCode\Bundle\ExchangeRate\Validator\Constraints\ExchangeRate" />
        <property name="sourceName">
            <constraint name="NotBlank" />
        </property>
        <property name="value">
            <constraint name="NotBlank" />
            <constraint name="Type">
                <option name="type">float</option>
            </constraint>
            <constraint name="GreaterThan">
                <option name="value">0</option>
            </constraint>
        </property>
        <property name="currencyCode">
            <constraint name="NotBlank"/>
        </property>
        <property name="rateType">
            <constraint name="NotBlank"/>
        </property>
        <property name="baseCurrencyCode">
            <constraint name="NotBlank"/>
        </property>
        <property name="date">
            <constraint name="NotBlank"/>
            <constraint name="DateTime"/>
        </property>
        <property name="createdAt">
            <constraint name="NotBlank"/>
            <constraint name="DateTime"/>
        </property>
        <property name="modifiedAt">
            <constraint name="NotBlank"/>
            <constraint name="DateTime"/>
        </property>

    </class>
</constraint-mapping>

<?xml version="1.0" encoding="UTF-8" ?>
<container
        xmlns="http://symfony.com/schema/dic/services"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
        >

    <parameters>
        <parameter key="run_open_code.exchange_rate.class">RunOpenCode\ExchangeRate\Manager</parameter>

        <parameter key="run_open_code.exchange_rate.processor.base_currency_validator.class">RunOpenCode\ExchangeRate\Processor\BaseCurrencyValidator</parameter>

        <parameter key="run_open_code.exchange_rate.repository.file_repository.class">RunOpenCode\ExchangeRate\Repository\FileRepository</parameter>

        <parameter key="run_open_code.exchange_rate.source.national_bank_of_serbia.class">RunOpenCode\ExchangeRate\Source\NationalBankOfSerbiaDomCrawlerSource</parameter>

        <parameter key="run_open_code.exchange_rate.registry.sources.class">RunOpenCode\ExchangeRate\Registry\SourcesRegistry</parameter>
        <parameter key="run_open_code.exchange_rate.registry.processors.class">RunOpenCode\ExchangeRate\Registry\ProcessorsRegistry</parameter>
        <parameter key="run_open_code.exchange_rate.registry.rates.class">RunOpenCode\ExchangeRate\Registry\RatesConfigurationRegistry</parameter>

        <parameter key="run_open_code.exchange_rate.registry.rates.factory.class">RunOpenCode\Bundle\ExchangeRate\DependencyInjection\Factory\RatesConfigurationRegistryFactory</parameter>

        <parameter key="run_open_code.exchange_rate.command.fetch.class">RunOpenCode\Bundle\ExchangeRate\Command\FetchCommand</parameter>
        <parameter key="run_open_code.exchange_rate.command.configuration_debug.class">RunOpenCode\Bundle\ExchangeRate\Command\ConfigurationDebugCommand</parameter>

        <parameter key="run_open_code.exchange_rate.controller.class">RunOpenCode\Bundle\ExchangeRate\Controller\ExchangeRateController</parameter>

        <parameter key="run_open_code.exchange_rate.validator.exchange_rate.class">RunOpenCode\Bundle\ExchangeRate\Validator\Constraints\ExchangeRateValidator</parameter>

        <parameter key="run_open_code.exchange_rate.type.rate_type.class">RunOpenCode\Bundle\ExchangeRate\Form\Type\RateType</parameter>

    </parameters>

    <services>
        <service id="run_open_code.exchange_rate" class="%run_open_code.exchange_rate.class%" />
        <service id="roc.exchange_rate" alias="run_open_code.exchange_rate" />

        <service id="run_open_code.exchange_rate.processor.base_currency_validator" class="%run_open_code.exchange_rate.processor.base_currency_validator.class%" public="false">
            <tag name="run_open_code.exchange_rate.processor" />
        </service>

        <service id="run_open_code.exchange_rate.repository.file_repository" class="%run_open_code.exchange_rate.repository.file_repository.class%" public="false" />

        <service id="run_open_code.exchange_rate.source.national_bank_of_serbia" class="%run_open_code.exchange_rate.source.national_bank_of_serbia.class%" public="false">
            <tag name="run_open_code.exchange_rate.source" alias="national_bank_of_serbia" />
        </service>

        <service id="run_open_code.exchange_rate.registry.sources" class="%run_open_code.exchange_rate.registry.sources.class%" public="false" />
        <service id="run_open_code.exchange_rate.registry.processors" class="%run_open_code.exchange_rate.registry.processors.class%" public="false" />

        <service id="run_open_code.exchange_rate.registry.rates" class="%run_open_code.exchange_rate.registry.rates.class%" public="false">
            <factory class="%run_open_code.exchange_rate.registry.rates.factory.class%" method="build" />
        </service>

        <service id="run_open_code.exchange_rate.command.fetch" class="%run_open_code.exchange_rate.command.fetch.class%">
            <argument type="service" id="run_open_code.exchange_rate" />
            <argument type="service" id="run_open_code.exchange_rate.registry.sources" />
            <tag name="console.command" />
        </service>

        <service id="run_open_code.exchange_rate.command.configuration_debug" class="%run_open_code.exchange_rate.command.configuration_debug.class%">
            <argument type="service" id="run_open_code.exchange_rate.registry.sources" />
            <argument type="service" id="run_open_code.exchange_rate.registry.processors" />
            <argument type="service" id="run_open_code.exchange_rate.registry.rates" />
            <tag name="console.command" />
        </service>

        <service id="run_open_code.exchange_rate.controller" class="%run_open_code.exchange_rate.controller.class%">
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="run_open_code.exchange_rate.validator.exchange_rate" class="%run_open_code.exchange_rate.validator.exchange_rate.class%">
            <argument type="service" id="run_open_code.exchange_rate.registry.rates"/>
            <tag name="validator.constraint_validator" alias="run_open_code.exchange_rate.rate_validator" />
        </service>

        <service id="run_open_code.exchange_rate.type.rate_type" class="%run_open_code.exchange_rate.type.rate_type.class%">
            <argument type="service" id="run_open_code.exchange_rate.registry.rates"/>
            <argument type="service" id="translator" />
            <tag name="form.type" />
        </service>

    </services>

</container>
